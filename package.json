{
    "name": "eslint-plugin-highcharts",
    "license": "ISC",
    "version": "2.0.0",
    "description": "ESLint rules for the Highcharts project",
    "keywords": [
        "eslint",
        "eslintplugin",
        "eslint-plugin"
    ],
    "author": "Highsoft AS <support@highcharts.com> (http://www.highcharts.com/about)",
    "repository": {
        "type": "git",
        "url": "https://github.com/highcharts/eslint-plugin-highcharts.git"
    },
    "main": "lib/index.js",
    "scripts": {
        "build": "npx tsc -b sources",
        "lint": "npx eslint sources",
        "test": "mocha tests --recursive",
        "watch": "npm run build -- --watch"
    },
    "dependencies": {
        "eslint": "^7.27.0",
        "requireindex": "~1.2.0"
    },
    "devDependencies": {
        "@types/eslint": "7.28.2",
        "@types/node": "12.20.36",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "@typescript-eslint/parser": "^5.3.0",
        "husky": "7.0.4",
        "mocha": "^9.1.2",
        "typescript": "^4.4.4"
    },
    "engines": {
        "node": ">=12.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm run build && npm test"
        }
    }
}
